[MASTER]
load-plugins=pylint_django
ignore=migrations

[MESSAGES CONTROL]
disable=
    missing-docstring,
    invalid-name,
    too-few-public-methods,
    import-error,
    no-member,
    too-many-ancestors,
    redefined-builtin,
    arguments-differ,
    unexpected-keyword-arg,
    no-self-use,
    abstract-method,
    protected-access,
    duplicate-code,
    fixme

[FORMAT]
max-line-length=120

[TYPECHECK]
ignored-classes=optparse,logging

[DESIGN]
max-attributes=15
max-parents=8

[VARIABLES]
dummy-variables-rgx=^(_+[a-zA-Z0-9]*?$|dummy_|_+$)

[LOGGING]
logging-modules=logging,django.utils.log

[REPORTS]
output-format=colorized